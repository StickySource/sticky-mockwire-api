		<developerConnection>scm:svn:https://stickycode.googlecode.com/svn/trunk/net.stickycode.mockwire/sticky-mockwire-api</developerConnection>
		<url>http://code.google.com/p/stickycode/source/browse/#svn/trunk/net.stickycode.mockwire/sticky-mockwire-api</url>
	</scm>

	<dependencies>
		<dependency>
			<groupId>net.stickycode.bootstrap</groupId>
			<artifactId>sticky-bootstrap-api</artifactId>
			<version>[3.4,4)</version>
		</dependency>
		<dependency>
			<groupId>net.stickycode.stereotype</groupId>
			<artifactId>sticky-stereotype-component</artifactId>
			<version>[3.1,4)</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>clirr-maven-plugin</artifactId>
				<version>2.6.1</version>
				<configuration>
					<comparisonVersion>[8.3]</comparisonVersion>
				</configuration>
			</plugin>
		</plugins>
	</build>
